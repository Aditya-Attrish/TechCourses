<%- include('../components/header', {title: `My Purchase | TechCourse Market`}) %>

    <style>
        :root{
            --primary: #4e73df;
        }
        .page-header {
            background: white;
            padding: 2rem 0;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            margin-bottom: 2rem;
        }
        
        .course-card {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }

        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 2rem 0 rgba(58, 59, 69, 0.15);
        }
        
        .course-thumbnail {
            height: 180px;
            object-fit: cover;
            width: 100%;
        }
        
        .progress {
            height: 10px;
            border-radius: 5px;
        }

        .badge-popular {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 10;
        }
        
        .category-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 10;
        }

        .filter-btn.active {
            background-color: var(--primary);
            color: white;
        }

        .sidebar {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            padding: 20px;
            height: fit-content;
        }
        
        .stats-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease;
        }

        .stats-card:hover {
            transform: translateY(-5px);
        }
        
        .stats-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
        }

        .continue-btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 0.9rem;
            transition: background 0.3s ease;
        }
        
        .continue-btn:hover {
            background: #2e59d9;
        }
    </style>

    <!-- Main Content -->
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="h2">My Courses</h1>
                    <p class="mb-0">Continue your learning journey</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <button class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Find New Courses
                    </button>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <!-- Sidebar with Filters -->
            <div class="col-lg-3">
                <div class="sidebar mb-4">
                    <h5 class="mb-3">Filters</h5>
                    
                    <div class="mb-3">
                        <label class="form-label">Categories</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="cat1" checked>
                            <label class="form-check-label" for="cat1">Web Development</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="cat2" checked>
                            <label class="form-check-label" for="cat2">Data Science</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="cat3" checked>
                            <label class="form-check-label" for="cat3">Mobile Development</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="cat4">
                            <label class="form-check-label" for="cat4">Cloud Computing</label>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Progress</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="prog1" checked>
                            <label class="form-check-label" for="prog1">In Progress</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="prog2">
                            <label class="form-check-label" for="prog2">Not Started</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="prog3">
                            <label class="form-check-label" for="prog3">Completed</label>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Sort By</label>
                        <select class="form-select">
                            <option>Recently Accessed</option>
                            <option>Progress (High to Low)</option>
                            <option>Progress (Low to High)</option>
                            <option>Alphabetical</option>
                        </select>
                    </div>
                    
                    <button class="btn btn-primary w-100">Apply Filters</button>
                </div>
                
                <!-- Learning Stats -->
                <div class="stats-card mb-4">
                    <i class="fas fa-trophy fa-2x text-warning mb-2"></i>
                    <h3 class="stats-number">8</h3>
                    <p class="mb-0">Courses Enrolled</p>
                </div>
                
                <div class="stats-card">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h3 class="stats-number">42%</h3>
                    <p class="mb-0">Average Completion</p>
                </div>
            </div>

            <!-- Course List -->
            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4>Your Learning Dashboard</h4>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary active">
                            <i class="fas fa-grip-horizontal"></i>
                        </button>
                        <button type="button" class="btn btn-outline-primary">
                            <i class="fas fa-list"></i>
                        </button>
                    </div>
                </div>

                <div class="row">
                    <!-- Course 1 -->
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="course-card">
                            <div class="position-relative">
                                <img src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=600&q=80" class="course-thumbnail" alt="Web Development">
                                <span class="badge bg-primary category-badge">Web Dev</span>
                                <span class="badge bg-warning badge-popular">Popular</span>
                            </div>
                            <div class="p-3">
                                <h5 class="mb-1">Complete Web Development Bootcamp</h5>
                                <p class="text-muted small mb-2">Updated June 2023</p>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div class="progress w-75">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small class="text-muted">65%</small>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">12/20 lessons</small>
                                    <button class="continue-btn">Continue</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Course 2 -->
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="course-card">
                            <div class="position-relative">
                                <img src="https://images.unsplash.com/photo-1542831371-29b0f74f9713?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=600&q=80" class="course-thumbnail" alt="Python Programming">
                                <span class="badge bg-info category-badge">Programming</span>
                            </div>
                            <div class="p-3">
                                <h5 class="mb-1">Python for Beginners</h5>
                                <p class="text-muted small mb-2">Updated May 2023</p>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div class="progress w-75">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small class="text-muted">30%</small>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">6/20 lessons</small>
                                    <button class="continue-btn">Continue</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Course 3 -->
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="course-card">
                            <div class="position-relative">
                                <img src="https://images.unsplash.com/photo-1633356122544-f134324a6cee?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=600&q=80" class="course-thumbnail" alt="React JS">
                                <span class="badge bg-primary category-badge">Web Dev</span>
                            </div>
                            <div class="p-3">
                                <h5 class="mb-1">React JS Masterclass</h5>
                                <p class="text-muted small mb-2">Updated July 2023</p>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div class="progress w-75">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small class="text-muted">80%</small>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">16/20 lessons</small>
                                    <button class="continue-btn">Continue</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 

<%- include('../components/footer') %>
