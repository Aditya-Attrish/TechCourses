<%- include('../components/header', {title: `Browse Courses | TechCourse Market`}) %>
    <!-- Courses Header -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="fw-bold mb-3">Browse Our Tech Courses</h1>
                    <p class="lead text-muted">Find the perfect course to boost your tech skills or career.</p>
                </div>
                <div class="col-md-6">
                    <form class="input-group mb-3" role="searchbox">
                        <input type="text" role="search" class="form-control form-control-lg" placeholder="Search courses...">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Courses Filter -->
    <section class="py-4 border-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="d-flex flex-wrap gap-2">
                        <a href="courses/?cat=All" class="btn btn-outline-primary <%= currCat === 'All' ? 'active': '' %>">All</a>
                        <% uniqueCat.forEach((cat)=>{ %>
                            <a href="courses/?cat=<%= cat %>" class="btn btn-outline-primary <%= currCat === cat ? 'active': '' %>"><%= cat %></a>
                        <% }); %>
                        
                    </div>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown">
                            Sort by: Popular
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Most Popular</a></li>
                            <li><a class="dropdown-item" href="#">Highest Rated</a></li>
                            <li><a class="dropdown-item" href="#">Newest</a></li>
                            <li><a class="dropdown-item" href="#">Price: Low to High</a></li>
                            <li><a class="dropdown-item" href="#">Price: High to Low</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Courses Listing -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                <% courses.forEach(function(course){ %>
                    <div class="col-lg-4 col-md-6">
                        <%- include('../components/course-card', {card: course}) %>
                    </div>
                <% }); %>
  
            </div>
            <!-- Pagination -->
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <% if(pageNum > 1) {%>
                        <li class="page-item me-3">
                            <a class="page-link" href="/courses/?page=<%= pageNum - 1 %>" tabindex="-1">Previous</a>
                        </li>
                    <% } %>
                    
                    <% for(let i = 1; i <= totalPage; i++) { %>
                        <li class="page-item <%= i===pageNum? "active": ""; %>">
                            <a class="page-link" href="/courses/?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                    
                    <% if(pageNum < totalPage) {%>
                    <li class="page-item ms-3">
                        <a class="page-link" href="/courses/?page=<%= pageNum + 1 %>">Next</a>
                    </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-5 bg-primary text-white">
        <div class="container text-center">
            <h2 class="mb-4">Can't Find What You're Looking For?</h2>
            <p class="lead mb-5">Request a course and we'll notify you when it's available.</p>
            <form class="row g-3 justify-content-center">
                <div class="col-md-6">
                    <input type="email" class="form-control form-control-lg" placeholder="Your email">
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control form-control-lg" placeholder="Course you want">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success btn-lg w-100">Request</button>
                </div>
            </form>
        </div>
    </section>

<%- include('../components/footer') %>