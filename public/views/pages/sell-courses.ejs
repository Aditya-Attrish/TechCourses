<%- include('../components/header', {title: "Sell your courses | TechCourse Market"}) %>

    <style>
        /* Custom styles */
        .step {
            display: none;
        }

        .step.active {
            display: block;
            animation: fadeIn 0.5s;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .progress-bar-step {
            height: 10px;
            transition: width 0.3s ease;
        }

        .section {
            transition: all 0.3s ease;
        }

        .section:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        .handle {
            cursor: move;
        }

        .dropzone {
            border: 2px dashed #dee2e6;
            border-radius: 5px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

        .dropzone:hover {
            border-color: #0d6efd;
            background-color: rgba(13, 110, 253, 0.05);
        }

        .thumbnail-preview {
            max-height: 200px;
            width: auto;
            display: none;
        }

        .video-preview {
            max-height: 200px;
            width: 100%;
            display: none;
        }

        .nav-tabs .nav-link.active {
            font-weight: 600;
        }
    </style>

    <!-- Sell Course Header -->
    <section class="py-5 bg-primary text-white">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-3">Sell Your Tech Course</h1>
            <p class="lead mb-0">Share your knowledge and earn money by creating high-quality tech courses</p>
        </div>
    </section>

    <!-- Progress Bar -->
    <div class="container mt-4">
        <div class="progress" style="height: 10px;">
            <div class="progress-bar progress-bar-step bg-primary" role="progressbar" style="width: 20%;"
                aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="d-flex justify-content-between mt-2">
            <small class="text-muted">Basic Info</small>
            <small class="text-muted">Curriculum</small>
            <small class="text-muted">Media</small>
            <small class="text-muted">Pricing</small>
            <small class="text-muted">Publish</small>
        </div>
    </div>

    <!-- Sell Course Form -->
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <h2 class="mb-4">Course Information</h2>
                            <form id="courseForm" novalidate>
                                <!-- Step 1: Basic Info -->
                                <div class="step active" id="step1">
                                    <div class="mb-4">
                                        <label for="courseTitle" class="form-label">Course Title*</label>
                                        <input type="text" class="form-control form-control-lg" id="courseTitle" required placeholder="e.g., Complete React Developer 2023">
                                        <div class="invalid-feedback">Please provide a course title.</div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <label for="courseSubtitle" class="form-label">Subtitle*</label>
                                        <input type="text" class="form-control" id="courseSubtitle" required placeholder="A brief description of what students will learn">
                                        <div class="invalid-feedback">Please provide a course subtitle.</div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <label for="courseDescription" class="form-label">Description*</label>
                                        <textarea class="form-control" id="courseDescription" rows="5" required placeholder="Detailed description of your course"></textarea>
                                        <div class="form-text">Describe what students will learn and how they'll benefit.</div>
                                        <div class="invalid-feedback">Please provide a course description.</div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label for="courseCategory" class="form-label">Category*</label>
                                            <select class="form-select" id="courseCategory" required>
                                                <option value="" selected disabled>Select a category</option>
                                                <option value="web-development">Web Development</option>
                                                <option value="mobile-development">Mobile Development</option>
                                                <option value="data-science">Data Science</option>
                                                <option value="cyber-security">Cyber Security</option>
                                                <option value="cloud-computing">Cloud Computing</option>
                                                <option value="programming-languages">Programming Languages</option>
                                                <option value="game-development">Game Development</option>
                                                <option value="other">Other</option>
                                            </select>
                                            <div class="invalid-feedback">Please select a category.</div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <label for="courseLevel" class="form-label">Level*</label>
                                            <select class="form-select" id="courseLevel" required>
                                                <option value="" selected disabled>Select difficulty level</option>
                                                <option value="beginner">Beginner</option>
                                                <option value="intermediate">Intermediate</option>
                                                <option value="advanced">Advanced</option>
                                                <option value="all-levels">All Levels</option>
                                            </select>
                                            <div class="invalid-feedback">Please select a difficulty level.</div>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex justify-content-end">
                                        <button type="button" class="btn btn-primary next-step">Next: Curriculum <i class="fas fa-arrow-right ms-2"></i></button>
                                    </div>
                                </div>
                                
                                <!-- Step 2: Curriculum -->
                                <div class="step" id="step2">
                                    <h4 class="mb-4">Course Curriculum</h4>
                                    <p class="text-muted mb-4">Organize your course into sections and lectures</p>
                                    
                                    <div id="courseSections">
                                        <!-- Sections will be added here -->
                                    </div>
                                    
                                    <button type="button" class="btn btn-sm btn-outline-secondary mb-4 add-section">
                                        <i class="fas fa-plus me-1"></i> Add Section
                                    </button>
                                    
                                    <div class="d-flex justify-content-between">
                                        <button type="button" class="btn btn-outline-secondary prev-step"><i class="fas fa-arrow-left me-2"></i> Previous</button>
                                        <button type="button" class="btn btn-primary next-step">Next: Media <i class="fas fa-arrow-right ms-2"></i></button>
                                    </div>
                                </div>
                                
                                <!-- Step 3: Media -->
                                <div class="step" id="step3">
                                    <h4 class="mb-4">Course Media</h4>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label class="form-label">Course Thumbnail*</label>
                                            <div class="card">
                                                <div class="card-body text-center">
                                                    <img id="thumbnailPreview" class="thumbnail-preview img-fluid rounded mb-3" alt="Thumbnail preview">
                                                    <div id="thumbnailUploadArea" class="dropzone">
                                                        <div class="dz-message">
                                                            <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                                            <p class="mb-1">Click to upload or drag & drop</p>
                                                            <p class="small text-muted">JPG, PNG (1280×720 recommended)</p>
                                                        </div>
                                                    </div>
                                                    <input type="file" id="thumbnailInput" accept="image/*" style="display: none;">
                                                    <input type="hidden" id="thumbnailFile" name="thumbnailFile">
                                                    <div class="invalid-feedback">Please upload a course thumbnail.</div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-6 mb-4">
                                            <label class="form-label">Promo Video (Optional)</label>
                                            <div class="card">
                                                <div class="card-body text-center">
                                                    <video id="videoPreview" class="video-preview rounded mb-3" controls>
                                                        Your browser does not support the video tag.
                                                    </video>
                                                    <div id="videoUploadArea" class="dropzone">
                                                        <div class="dz-message">
                                                            <i class="fas fa-video fa-3x text-muted mb-3"></i>
                                                            <p class="mb-1">Click to upload or drag & drop</p>
                                                            <p class="small text-muted">MP4 format (max 5 minutes)</p>
                                                        </div>
                                                    </div>
                                                    <input type="file" id="videoInput" accept="video/*" style="display: none;">
                                                    <input type="hidden" id="videoFile" name="videoFile">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <label class="form-label">Additional Resources (Optional)</label>
                                        <div class="card">
                                            <div class="card-body">
                                                <div id="resourcesUploadArea" class="dropzone">
                                                    <div class="dz-message">
                                                        <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                                                        <p class="mb-1">Click to upload or drag & drop</p>
                                                        <p class="small text-muted">PDFs, slides, code samples, etc.</p>
                                                    </div>
                                                </div>
                                                <div id="resourcesList" class="mt-3 small"></div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between">
                                        <button type="button" class="btn btn-outline-secondary prev-step"><i class="fas fa-arrow-left me-2"></i> Previous</button>
                                        <button type="button" class="btn btn-primary next-step">Next: Pricing <i class="fas fa-arrow-right ms-2"></i></button>
                                    </div>
                                </div>
                                
                                <!-- Step 4: Pricing -->
                                <div class="step" id="step4">
                                    <h4 class="mb-4">Pricing & Settings</h4>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label for="coursePrice" class="form-label">Course Price (USD)*</label>
                                            <div class="input-group">
                                                <span class="input-group-text">$</span>
                                                <input type="number" class="form-control" id="coursePrice" min="0" step="0.01" required value="49.99">
                                            </div>
                                            <div class="invalid-feedback">Please set a valid price.</div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <label for="courseDiscount" class="form-label">Discount Price (Optional)</label>
                                            <div class="input-group">
                                                <span class="input-group-text">$</span>
                                                <input type="number" class="form-control" id="courseDiscount" min="0" step="0.01" placeholder="0.00">
                                            </div>
                                            <div class="form-text">Set a discounted price for promotions.</div>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <label class="form-label">Course Language*</label>
                                        <select class="form-select" id="courseLanguage" required>
                                            <option value="english" selected>English</option>
                                            <option value="spanish">Spanish</option>
                                            <option value="french">French</option>
                                            <option value="german">German</option>
                                            <option value="other">Other</option>
                                        </select>
                                        <div class="invalid-feedback">Please select a language.</div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="certificateAvailable" checked>
                                            <label class="form-check-label" for="certificateAvailable">
                                                Certificate of completion available
                                            </label>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="featuredCourse">
                                            <label class="form-check-label" for="featuredCourse">
                                                Feature this course on the homepage (additional fee may apply)
                                            </label>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between">
                                        <button type="button" class="btn btn-outline-secondary prev-step"><i class="fas fa-arrow-left me-2"></i> Previous</button>
                                        <button type="button" class="btn btn-primary next-step">Next: Publish <i class="fas fa-arrow-right ms-2"></i></button>
                                    </div>
                                </div>
                                
                                <!-- Step 5: Publish -->
                                <div class="step" id="step5">
                                    <h4 class="mb-4">Review & Publish</h4>
                                    
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <h5 class="mb-3">Course Summary</h5>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <p><strong>Title:</strong> <span id="summaryTitle"></span></p>
                                                    <p><strong>Category:</strong> <span id="summaryCategory"></span></p>
                                                    <p><strong>Level:</strong> <span id="summaryLevel"></span></p>
                                                </div>
                                                <div class="col-md-6">
                                                    <p><strong>Price:</strong> $<span id="summaryPrice"></span></p>
                                                    <p><strong>Sections:</strong> <span id="summarySections"></span></p>
                                                    <p><strong>Language:</strong> <span id="summaryLanguage"></span></p>
                                                </div>
                                            </div>
                                            <div class="mt-3 text-center" id="thumbnailSummary"></div>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <label for="publishOptions" class="form-label">Publishing Options*</label>
                                        <select class="form-select" id="publishOptions" required>
                                            <option value="" selected disabled>Select publishing option</option>
                                            <option value="publish">Publish Now</option>
                                            <option value="draft">Save as Draft</option>
                                            <option value="private">Private (Only visible with link)</option>
                                        </select>
                                        <div class="invalid-feedback">Please select a publishing option.</div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="termsAgreement" required>
                                            <label class="form-check-label" for="termsAgreement">
                                                I agree to the <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms of Service</a> and confirm that this course is my original work
                                            </label>
                                            <div class="invalid-feedback">You must agree to the terms.</div>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between">
                                        <button type="button" class="btn btn-outline-secondary prev-step"><i class="fas fa-arrow-left me-2"></i> Previous</button>
                                        <button type="submit" class="btn btn-success" id="publishButton">
                                            <span class="spinner-border spinner-border-sm d-none" id="publishSpinner" role="status"></span>
                                            Publish Course
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <div class="mt-4 text-center">
                        <p class="text-muted">Need help creating your course? <a href="#">Read our instructor guide</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Terms Modal -->
    <div class="modal fade" id="termsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Terms of Service</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6>Instructor Agreement</h6>
                    <p>By publishing a course on TechCourse Market, you agree to our instructor terms and conditions. You retain ownership of your content but grant us a license to distribute it through our platform.</p>
                    
                    <h6 class="mt-4">Content Requirements</h6>
                    <ul>
                        <li>All course content must be your original work</li>
                        <li>You must have the rights to all materials included in your course</li>
                        <li>Courses must provide educational value and meet our quality standards</li>
                        <li>No misleading or deceptive content is allowed</li>
                    </ul>
                    
                    <h6 class="mt-4">Revenue Share</h6>
                    <p>Instructors earn 70% of the net revenue from course sales. We handle payment processing, customer support, and marketing.</p>
                    
                    <h6 class="mt-4">Refund Policy</h6>
                    <p>We offer a 30-day money-back guarantee for all courses. Refunds are deducted from instructor earnings.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">I Understand</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/sell-1.js"></script>
<%- include('../components/footer') %>