<div class="card course-card h-100">
    <div class="badge bg-danger position-absolute m-2">Bestseller</div>
    <img src="<%= card.thumbnail %>" class="card-img-top" alt="React Course">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-2">
            <span class="badge bg-success"><%= card.category %></span>
            <span class="text-warning">
                <i class="fas fa-star"></i> <%= card.rating %> (1,245)
            </span>
        </div>
        <h5 class="card-title"><%= card.title %></h5>
        <p class="card-text text-muted"><%= card.subtitle %></p>
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                <i class="fas fa-user-graduate me-1 text-muted"></i>
                <small class="text-muted"><%= card.students %> students</small>
            </div>
            <div>
                <i class="fas fa-clock me-1 text-muted"></i>
                <small class="text-muted">32 hours</small>
            </div>
        </div>
    </div>
    <div class="card-footer bg-white border-top-0">
        <div class="d-flex justify-content-between align-items-center">
            <% if(card.price === 0) { %>
                <h5 class="mb-0 text-uppercase" style="color: #1cc88a;">FREE</h5>
            <% } else {%>
                <h5 class="mb-0 text-primary">$<%= card.price %></h5>
            <% } %>
            <div>
                <button class="btn btn-sm btn-outline-primary me-2" onclick="saved(this);">
                    <i class="far fa-heart" style="color: red;"></i>
                </button>
                <a href="/courses/course/<%= card.id %>" class="btn btn-sm btn-primary">View Course</a>
            </div>
        </div>
    </div>
</div>

<script>
    function saved(btn) {
        const i = btn.children[0];
        if (!i.classList.contains('fa-solid')) {
            i.classList.add('fa-solid');
        } else {
            i.classList.remove('fa-solid'); 
        }
        
    }
</script>